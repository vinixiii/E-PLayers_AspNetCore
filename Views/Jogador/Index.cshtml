@model Jogador
@{
    ViewData["Title"] = "Jogadores";
}

<div class="titulo_pagina">
    <h1>Cadastro de @ViewData["Title"]</h1>
</div>

<form class="cadastro" method="POST" action='@Url.Action("Cadastrar")'>

    <div class="campo">
        <label>ID Jogador</label>
        <input type="text" name="IdJogador" required />
    </div>

    <div class="campo">
        <label>Equipe</label>
        @* Fizemos uma caixa de seleção *@
        <select name="IdEquipe" id="IdEquipe">
            <option value="0">Selecione uma opção</option>
            @foreach (var item in ViewBag.Equipes)
            {
                <option value="@item.IdEquipe">@item.Nome</option>
            }
        </select>
    </div>

    <div class="campo">
        <label>Nome</label>
        <input type="text" name="Nome" required />
    </div>

    <div class="campo">
        <label>Email</label>
        <input type="text" name="Email" required />
    </div>

    <div class="campo">
        <label>Senha</label>
        <input type="password" name="Senha" required />
    </div>

    <button class="gradient btn" type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Ação</th>
    </thead>
    <tbody>
        @foreach(Jogador j in ViewBag.Jogadores){
            <tr>
                <td>@j.IdJogador</td>
                <td>@j.Nome</td>
                <td>@j.Email</td>
                <td><a class="icone-excluir" asp-area="" asp-controller="Jogador" asp-action="Excluir" asp-route-id="@j.IdJogador"><i class="far fa-times-circle"></i></a></td>
            </tr>
        }
    </tbody>
</table>